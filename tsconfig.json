{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@emails/*": ["src/emails/*"],
      "@entities/*": ["src/graphql/entities/*"],
      "@functions/*": ["src/graphql/functions/*"],
      "@generators/*": ["src/graphql/generators/*"],
      "@resolvers/*": ["src/graphql/resolvers/*"],
      "@definitions/*": ["src/graphql/definitions/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@utils/*": ["src/utils/*"],
      "@validators/*": ["src/validators/*"],
    },                     
    "rootDirs": ["./src"],
    // "typeRoots": [],                       
    // "types": [],                           
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,           
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true
  }
}
